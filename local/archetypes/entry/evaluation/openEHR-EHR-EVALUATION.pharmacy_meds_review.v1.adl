									use_node ELEMENT occurrences matches {0..1} /data[at0001]/items[at0002]/items[at0007]/items[at0011]	-- /data[Tree]/items[Medication item assessment]/items[Drug-related problem]/items[Impact]
									use_node ELEMENT occurrences matches {0..1} /data[at0001]/items[at0002]/items[at0029]/items[at0010]	-- /data[Tree]/items[Medication item assessment]/items[Pharmacokinetic issue]/items[Recommendation]
								}
							}
							CLUSTER[at0038] occurrences matches {0..*} matches {	-- Patient related problem
