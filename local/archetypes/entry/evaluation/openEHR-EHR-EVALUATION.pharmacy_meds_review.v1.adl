										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {	-- Outcome
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0023, 	-- Cost savings only
													at0024, 	-- Potential ADR / toxicity prevented
