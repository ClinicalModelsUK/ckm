									ELEMENT[at0049] occurrences matches {0..1} matches {	-- Duration of self-supply
										value matches {
											DV_DURATION matches {
												value matches {PD}
											}
										}
									}
									ELEMENT[at0050] occurrences matches {0..1} matches {	-- Duration of supply required
										value matches {
											DV_DURATION matches {
												value matches {PD}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
