definition
	EVALUATION[at0000] matches {	-- Pharmacist medication review
		data matches {
			ITEM_TREE[at0001] matches {	-- Tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0052] occurrences matches {0..1} matches {	-- Medication list category
