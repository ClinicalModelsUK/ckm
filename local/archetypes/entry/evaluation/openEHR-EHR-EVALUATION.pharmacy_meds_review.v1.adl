							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0053, 	-- Admission
									at0054, 	-- Inpatient
									at0055, 	-- Outpatient
									at0056]	-- Discharge
								}
							}
						}
					}
					CLUSTER[at0002] occurrences matches {0..*} matches {	-- Medication item assessment
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0003] occurrences matches {0..1} matches {	-- Problem identified
								value matches {
									DV_BOOLEAN matches {
										value matches {True, False}
									}
								}
							}
							ELEMENT[at0004] occurrences matches {0..1} matches {	-- Original medication item
								value matches {
									DV_EHR_URI matches {*}
								}
							}
